<Window x:Class="LogFileViewer.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogFileViewer"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"      
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        Title="Log File Viewer" Height="700" Width="1300"
        WindowStartupLocation="CenterScreen">

    <Border CornerRadius="10"
            BorderThickness="1">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource winBorderColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.75"/>
                <GradientStop Color="{StaticResource winBorderColor3}" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid>
            <Grid.ColumnDefinitions>
                <!--Navigation menu-->
                <ColumnDefinition Width="300"/>
                <!--Content Section-->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--Navigation Menu-->
            <Border CornerRadius="10,0,0,10"
                    Grid.Column="0">

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{StaticResource secondaryBackColor1}" Offset="0"/>
                        <GradientStop Color="{StaticResource secondaryBackColor2}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Header / Logo -->
                        <RowDefinition Height="Auto"/>
                        <!-- Open Folder Button -->
                        <RowDefinition Height="*"/>
                        <!-- ListBox that fills remaining space -->                        
                    </Grid.RowDefinitions>
                    
                    <!--Logo-->
                    <StackPanel Orientation="Horizontal"
                                Height="35"
                                Margin="15,25,0,40"
                                Grid.Row="0">
                        <Image Source="/Images/Logo.png" Height="30"/>

                        <TextBlock Text="LogViewer"
                                   Foreground="{StaticResource titleColor2}"
                                   FontSize="20"
                                   FontFamily="Calibri"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"/>
                    </StackPanel>

                    <!--Button-->                                        
                    <Button x:Name="SelectFolder"
                            Style="{StaticResource clickButton}"
                            Tag="{StaticResource color8}"                                
                            HorizontalAlignment="Stretch"
                            Grid.Row="1">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="FolderOpen" Style="{StaticResource clickButtonIcon}" />
                            <TextBlock Text="Open Folder" Style="{StaticResource clickButtonTitleText}"/>
                        </StackPanel>
                    </Button>

                    <TextBlock Grid.Column="1" 
                               Grid.Row="1"
                                Style="{StaticResource clickButtonInfoText}"
                                    Text="{Binding SelectedFolderPath}"
                                    Foreground="{StaticResource titleColor2}"
                                    FontSize="12"
                                    FontFamily="Calibri"
                                    VerticalAlignment="Center"
                                    Margin="10,0,0,0"
                                    TextTrimming="CharacterEllipsis"/>
                    
                    <!--Listbox-->
                    <ListBox x:Name="LogFiles" 
                             Background="Transparent" 
                             BorderThickness="0"
                             Margin="5"
                             ItemsSource="{Binding LogFiles}"
                             SelectedItem="{Binding SelectedLogFile, Mode=TwoWay}"
                             Grid.Row="2"
                             ScrollViewer.VerticalScrollBarVisibility="Auto">
                        
                        <!--Disable ListboxItem Visuals-->
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Margin" Value="0,0,0,5"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>

                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="border"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="0">
                                                <ContentPresenter />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <!-- Optional: add selected background if you want -->
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="Transparent"/>
                                                    <Setter TargetName="border" Property="BorderBrush" Value="Transparent"/>
                                                </Trigger>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter TargetName="border" Property="BorderBrush" Value="Transparent"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>

                            </Style>
                        </ListBox.ItemContainerStyle>

                        <ListBox.Resources>
                            <Style TargetType="ScrollBar" BasedOn="{StaticResource SlimScrollBar}"/>
                        </ListBox.Resources>
                        
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <RadioButton Style="{StaticResource menuButton}"
                                           Tag="{StaticResource color1}"                                           
                                           IsChecked="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}"
                                           Focusable="False">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="210"/>
                                            <ColumnDefinition Width="30"/>
                                        </Grid.ColumnDefinitions>

                                        <fa:IconImage Grid.Column="0" 
                                                     Icon="File" 
                                                     Style="{StaticResource menuButtonIcon}"
                                                     HorizontalAlignment="Left" />

                                        <StackPanel Grid.Column="1" 
                                                  Orientation="Vertical"
                                                  HorizontalAlignment="Left">
                                            <TextBlock Text="{Binding FileName}" 
                                                     Style="{StaticResource menuButtonTitleText}"/>
                                            <TextBlock Style="{StaticResource menuButtonInfoText}">
                                                <Run Text="Size: "/>
                                                <Run Text="{Binding FileSize}"/>
                                                <Run Text=" | Modified: "/>
                                                <Run Text="{Binding LastModified}"/>
                                            </TextBlock>
                                        </StackPanel>

                                        <Ellipse Grid.Column="2" 
                                                Width="8" Height="8" 
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Fill="{Binding HasErrors, 
                                                       Converter={StaticResource BoolToColorConverter}, 
                                                       ConverterParameter='#FF4040,#40FF40'}"
                                                ToolTip="{Binding HasErrors, 
                                                         Converter={StaticResource BoolToTextConverter}, 
                                                         ConverterParameter='Contains errors,No errors'}"/>
                                    </Grid>
                                </RadioButton>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!--Content Section-->
            <Border CornerRadius="0,10,10,0"
                    Grid.Column="1">

                <Border.Background>
                    <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                        <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"/>
                        <GradientStop Color="{StaticResource primaryBackColor2}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Grid.RowDefinitions>
                        <!--Control bar-->
                        <RowDefinition Height="25"/>
                        <!--Header / Caption-->
                        <RowDefinition Height="35"/>
                        <!--Content section / Child Views-->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!--Control bar-->
                    <StackPanel x:Name="pnlControlBar"
                                Grid.Row="0"
                                Orientation="Horizontal"
                                FlowDirection="RightToLeft"
                                Background="Transparent"
                                Margin="0,0,5,0"
                                MouseLeftButtonDown="pnlControlBar_MouseLeftButtonDown"
                                MouseEnter="pnlControlBar_MouseEnter">

                        <Button x:Name="btnClose"
                                Style="{StaticResource controlButton}"
                                Tag="{StaticResource color4}"
                                Click="btn_Close_Click">
                            <fa:IconImage Icon="Xmark" Style="{StaticResource controlButtonIcon}"/>
                        </Button>
                        <Button x:Name="btnMaximize"
                                Style="{StaticResource controlButton}"
                                Tag="{StaticResource color8}"
                                Click="btn_Maximize_Click">
                            <fa:IconImage Icon="WindowMaximize" Style="{StaticResource controlButtonIcon}"/>
                        </Button>
                        <Button x:Name="btnMinimize"
                                Style="{StaticResource controlButton}"
                                Tag="{StaticResource color6}"
                                Click="btn_Minimize_Click">
                            <fa:IconImage Icon="WindowMinimize" Width="12" Style="{StaticResource controlButtonIcon}"/>
                        </Button>
                                                
                    </StackPanel>

                    <!--Header / Caption-->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        
                        <!--Caption-->
                        <StackPanel Grid.Column="0"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <fa:IconImage Icon="Home"
                                          Height="20"
                                          Width="20"
                                          Foreground="{StaticResource titleColor2}"
                                          Margin="35,0,10,0"/>
                            <TextBlock Text="Home"
                                       Foreground="{StaticResource titleColor2}"
                                       FontSize="16"
                                       VerticalAlignment="Center"
                                       FontWeight="Medium"
                                       FontFamily="Calibri"/>
                        </StackPanel>
                        
                        <!--User Options-->
                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    FlowDirection="RightToLeft"
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0">
                            <Button Style="{StaticResource iconButton}"
                                    Tag="{StaticResource color1}">
                                <fa:IconImage Icon="AngleDown" Style="{StaticResource iconButtonIcon}"/>
                            </Button>

                            <TextBlock Text="ExampleText"
                                       Foreground="{StaticResource titleColor3}"
                                       FontFamily="Calibri"
                                       FontSize="12"
                                       VerticalAlignment="Center"/>

                        </StackPanel>

                    </Grid>

                    <!--Content section / Child Views-->

                    <ContentControl Content=""
                                    Grid.Row="2"
                                    Margin="25"/>
                </Grid>
            
            </Border>

        </Grid>
    </Border>
    
</Window>
