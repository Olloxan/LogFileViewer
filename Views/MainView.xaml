<Window x:Class="LogFileViewer.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogFileViewer"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"      
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        Title="Log File Viewer" Height="700" Width="1300"
        WindowStartupLocation="CenterScreen">

    <Border CornerRadius="10"
            BorderThickness="1">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource winBorderColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.75"/>
                <GradientStop Color="{StaticResource winBorderColor3}" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid>
            <Grid.ColumnDefinitions>
                <!--Navigation menu-->
                <ColumnDefinition Width="250"/>
                <!--Content Section-->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--Navigation Menu-->
            <Border CornerRadius="10,0,0,10"
                    Grid.Column="0">

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{StaticResource secondaryBackColor1}" Offset="0"/>
                        <GradientStop Color="{StaticResource secondaryBackColor2}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <StackPanel>
                    <!--Logo-->
                    <StackPanel Orientation="Horizontal"
                                Height="35"
                                Margin="15,25,0,40">
                        <Image Source="/Images/Logo.png" Height="30"/>

                        <TextBlock Text="LogViewer"
                                   Foreground="{StaticResource titleColor2}"
                                   FontSize="20"
                                   FontFamily="Calibri"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"/>
                    </StackPanel>

                    <!--Button TODO: change appearance to match Logviewer textblobk-->
                    <Button Style="{StaticResource clickButton}"
                            Tag="{StaticResource color8}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Gears" Style="{StaticResource clickButtonIcon}" />
                            <TextBlock Text="Settings" Style="{StaticResource clickButtonTitleText}"/>
                        </StackPanel>
                    </Button>
                    <!--Listbox-->
                    <ListBox x:Name="LogFileListBox" 
                            Background="Transparent" 
                            BorderThickness="0"
                            Margin="5">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Margin" Value="0,0,0,5"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>

                        <RadioButton Style="{StaticResource menuButton}"
                                     Tag="{StaticResource color1}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Gears" Style="{StaticResource menuButtonIcon}" />
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="system_log_2024.txt" Style="{StaticResource menuButtonTitleText}"/>
                                    <TextBlock Text="Size: 850 KB | Modified: Yesterday" Style="{StaticResource menuButtonInfoText}"/>
                                </StackPanel>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource menuButton}"
                                     Tag="{StaticResource color2}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Gears" Style="{StaticResource menuButtonIcon}" />
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="error_log_2024.txt" Style="{StaticResource menuButtonTitleText}"/>
                                    <TextBlock Text="Size: 1.2 MB | Modified: Today 10:30" Style="{StaticResource menuButtonInfoText}"/>
                                </StackPanel>
                            </StackPanel>
                        </RadioButton>
                        
                    </ListBox>
                </StackPanel>
            </Border>

            <!--Content Section-->
            <Border CornerRadius="0,10,10,0"
                    Grid.Column="1">

                <Border.Background>
                    <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                        <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"/>
                        <GradientStop Color="{StaticResource primaryBackColor2}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

        </Grid>

    </Border>

    

</Window>
